{
  "manifest_version": 3,
  "name": "字体子集化工具",
  "version": "1.0.0",
  "description": "一个用于创建字体子集的Chrome插件，帮助减小网页字体文件大小",

  "permissions": [],

  "action": {
    "default_popup": "popup.html",
    "default_title": "字体子集化工具",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}